{
  "env": {
    "browser": true,
    "es2017": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "react-app",
    "prettier",
    "plugin:@typescript-eslint/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "plugins": ["react", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "trailingComma": "es5",
        "semi": false,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "useTabs": false
      }
    ]
  }
}
